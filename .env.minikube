# Minikube Environment Variables
ENV=production
NODE_ENV=production

# Database Configuration (internal Kubernetes services)
DATABASE_URL=postgresql://chatuser:chatpass@postgres:5432/chatapp
POSTGRES_USER=chatuser
POSTGRES_PASSWORD=chatpass
POSTGRES_DB=chatapp

# Redis Configuration (internal Kubernetes service)
REDIS_URL=redis://redis:6379

# API Configuration (internal Kubernetes services)
API_BASE_URL=http://user-service:3000
BOT_API_URL=http://bot-service:8000

# External API URLs (three-host architecture)
VITE_API_BASE_URL=https://api-pressnavek-appointment-app.gromosome.com
VITE_BOT_API_URL=https://api-pressnavek-appointment-app.gromosome.com/bot

# For local Minikube development (HTTP)
VITE_API_BASE_URL_LOCAL=http://api-pressnavek-appointment-app.gromosome.com
VITE_BOT_API_URL_LOCAL=http://api-pressnavek-appointment-app.gromosome.com/bot

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minikube
JWT_EXPIRES_IN=24h

# External APIs (update with your actual keys)
OPENAI_API_KEY=your-openai-api-key
LANGCHAIN_API_KEY=your-langchain-api-key

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/app/uploads

# Kubernetes specific
KUBERNETES_NAMESPACE=chat-appointment
MINIKUBE_IP=192.168.49.2